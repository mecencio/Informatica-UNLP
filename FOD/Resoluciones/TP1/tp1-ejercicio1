program tp1Ejercicio1;


//Programa Principal
type
	archivo_enteros = file of integer;
var
  enteros : archivo_enteros;
  x : integer;
  ruta, nomArchivo : string;
begin
  write('Ingrese el nombre del archivo: ');
  readln(nomArchivo);
  ruta := 'C:\Users\nicol\OneDrive\Documentos\Facu\FOD\Resoluciones\' + nomArchivo + '.dat';
  assign(enteros, ruta);
  rewrite(enteros);
  writeln();
  write('Ingrese un numero: ');
  readln(x);
  while (x <> 30000) do begin
	write(enteros, x);
	write('Ingrese un nuevo numero: ');
	readln(x);
  end;
  writeln();
  writeln('Se esta guardando el archivo');
  close(enteros);
  writeln('Archivo guardado');
  writeln('Programa finalizado');
end.
